  <?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>

    <view name="system">

<carousel name="systemcarousel">
			<type>vertical_wheel</type>
			<pos>0 0</pos>
			<size>1 1</size>
			<origin>0 0</origin>
			<color>00000000</color>
			<logoScale>1.3</logoScale>
			<logoSize>0.19 0.19</logoSize>
			<logoRotation>6.5</logoRotation>
			<logoRotationOrigin>-4.0 0.3</logoRotationOrigin>
			<logoAlignment>left</logoAlignment>
			<systemInfoDelay>0.1</systemInfoDelay>
        <scrollSound>./medias/sound/${x.scroll.sound}.wav</scrollSound>
        <maxLogoCount>16</maxLogoCount>
		<zIndex>1000</zIndex>
		<defaultTransition>instant</defaultTransition>	
      </carousel>

