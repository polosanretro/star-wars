<theme>
  <formatVersion>7</formatVersion>
  <view name="splash">

    <splash name="splash">
      <backgroundColor>202020FF</backgroundColor>
    </splash>
   
    <image name="progressbar">
      <color>21D7D5</color>
	  <pos>0.27 0.768</pos>
	  <origin>0 0</origin>
	  <zIndex>95</zIndex>
    </image>

    <image name="progressbar:active">
      <color>D74521</color>
	  <zIndex>95</zIndex>
    </image>
   
    <image name="background">
      <size>1 1</size>
	  <pos>0 0</pos>
      <origin>0 0</origin>
	  <path>./medias/starwars.png</path>
    </image>

    <text name="label">
      <fontPath>././medias/fonts/Starjedi.ttf</fontPath>
      <color>000000df</color>
	  <pos>0.02 0.688</pos>
	  <origin>0 0</origin>
      <fontSize>0.05</fontSize>
      <glowColor>9AEE17</glowColor>
      <glowSize>1</glowSize>
	  <forceUppercase>true</forceUppercase>
    </text>

    <text name="mylabel" extra="true">
      <fontPath>./medias/fonts/Starjedi.ttf</fontPath>
      <fontSize>0.10</fontSize>
	  <color>000000df</color>
	  <pos>0.5 0.028</pos>
	  <origin>0.5 0</origin>
      <glowColor>F7EA80</glowColor>
      <glowSize>2</glowSize>
	  <forceUppercase>true</forceUppercase>
	  <text>Flashback Star Wars</text>
